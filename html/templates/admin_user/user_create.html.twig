{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Usuarios{% endblock %}


{% block titlepage %}Usuario Nuevo{% endblock %}
{% block breadcrubms %}
    <li><a href="index.html">Home</a></li>
	<li><a href="{{ path('admin_users') }}"><span>Usuarios</span></li>
	<li><span>Usuario Nuevo</span></li>
{% endblock %}

{% block maincontentarea %}
	<div class="row">
		<div class="col-lg-6 mt-5">
            <div class="card">
                <div class="card-header">{% trans %}Datos del Usuario{% endtrans %}</div>
                <div class="card-body">
                    {{ form_start(user_create) }}
                        {{ form_row(user_create.name) }}
                        {{ form_row(user_create.surname) }}
                        {{ form_row(user_create.email) }}
                        {{ form_row(user_create.iniciales) }}
                        {{ form_row(user_create.username) }}
                        {{ form_row(user_create.password) }}
                        {{ form_row(user_create.locale) }}                        
                        {{ form_row(user_create._token) }}
                        {{ form_row(user_create.roles) }}
                        <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
                        {{ form_row(user_create.submit) }}
                    {{ form_end(user_create,{'render_rest': false}) }}
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}